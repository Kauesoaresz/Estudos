<%- include("partials/header", { tituloPagina }) %>

<div class="kst-container auth-page">
  <div class="auth-card">
    <h1 class="auth-title">Criar conta</h1>
    <p class="auth-subtitle">
      Monte seu próprio painel de evolução para Medicina.
    </p>

    <% if (erro) { %>
      <div class="auth-error"><%= erro %></div>
    <% } %>

    <form action="/cadastro" method="POST" class="auth-form">
      <div class="auth-field">
        <label for="nome">Nome</label>
        <input
          type="text"
          id="nome"
          name="nome"
          value="<%= valores.nome %>"
          required
          autocomplete="name"
        />
      </div>

      <div class="auth-field">
        <label for="email">E-mail</label>
        <input
          type="email"
          id="email"
          name="email"
          value="<%= valores.email %>"
          required
          autocomplete="email"
        />
      </div>

      <div class="auth-field">
        <label for="senha">Senha</label>
        <input
          type="password"
          id="senha"
          name="senha"
          required
          autocomplete="new-password"
        />
      </div>

      <div class="auth-field">
        <label for="confirmar_senha">Confirmar senha</label>
        <input
          type="password"
          id="confirmar_senha"
          name="confirmar_senha"
          required
          autocomplete="new-password"
        />
      </div>

      <button type="submit" class="auth-button">
        Criar conta
      </button>
    </form>

    <p class="auth-footer-text">
      Já tem uma conta?
      <a href="/login">Entrar</a>
    </p>
  </div>
</div>

<%- include("partials/footer") %>
