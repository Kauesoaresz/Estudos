<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= tituloPagina %></title>

  <!-- CSS exclusivo da rotina -->
  <link rel="stylesheet" href="/css/pages/rotina.css">
</head>

<body class="page-rotina">

  <div class="rotina-top-bar">
    <a href="/" class="btn-voltar">‚Üê Voltar ao painel</a>

    <!-- BOT√ÉO TEMA CLARO/ESCURO -->
    <button id="toggle-theme" class="theme-toggle-btn">
      üåô
    </button>
  </div>

  <section class="kst-rotina">

    <!-- HEADER DA P√ÅGINA -->
    <header class="rotina-header">
      <div class="rotina-header-left">
        <h1 class="rotina-title">Rotina</h1>
        <p class="rotina-subtitle">
          Sua semana ideal, com hor√°rios fixos para acordar, estudar, treinar e descansar.
        </p>
      </div>
    </header>

    <!-- GRID DE DIAS -->
    <div class="kst-rotina-grid">

      <% diasSemana.forEach((dia, i) => { %>
        <div class="rotina-day">

          <!-- T√≠tulo do dia + linha -->
          <div class="day-header">
            <span class="day-name"><%= dia.label.toUpperCase() %></span>
          </div>

          <!-- Timeline vertical -->
          <div class="day-timeline">

            <% if (!rotinaPorDia[i].length) { %>
              <div class="day-empty">
                Nenhum bloco definido para este dia.
              </div>
            <% } else { %>

              <% rotinaPorDia[i].forEach((b) => { %>
                <div class="routine-block" style="--block-color: <%= b.color || '#1C9AFF' %>" data-block-id="<%= b.id %>">

                  <!-- Cabe√ßalho do bloco: etiqueta + menu ‚ãÆ -->
                  <div class="routine-header">
                    <div class="routine-label">
                      <span><%= b.title %></span>
                    </div>

                    <button
                      type="button"
                      class="routine-menu-btn"
                      data-block-id="<%= b.id %>">
                      ‚ãÆ
                    </button>

                    <!-- MENU PRINCIPAL DO BLOCO -->
                    <div class="routine-menu" data-menu-for="<%= b.id %>">
                      <!-- Editar -->
                      <button
                        type="button"
                        class="routine-menu-item js-menu-edit"
                        data-edit-url="/rotina/<%= b.id %>/editar">
                        Editar
                      </button>

                      <!-- Excluir -->
                      <form
                        action="/rotina/<%= b.id %>/excluir"
                        method="POST"
                        onsubmit="return confirm('Excluir este bloco?');">
                        <button type="submit" class="routine-menu-item danger">
                          Excluir
                        </button>
                      </form>

                      <!-- Duplicar (abre painel de dias) -->
                      <button
                        type="button"
                        class="routine-menu-item js-menu-dup"
                        data-block-id="<%= b.id %>">
                        Duplicar‚Ä¶
                      </button>
                    </div>
                  </div>

                  <!-- Hor√°rios -->
                  <div class="routine-time">
                    <span><%= b.startTime %></span><br>
                    <span><%= b.endTime %></span>
                  </div>

                  <!-- Descri√ß√£o -->
                  <% if (b.description) { %>
                    <div class="routine-desc"><%= b.description %></div>
                  <% } %>

                  <!-- PAINEL DE DUPLICA√á√ÉO (V√ÅRIOS DIAS DE UMA VEZ) -->
                  <div class="routine-dup-panel" data-dup-for="<%= b.id %>">
                    <p class="dup-title">Duplicar bloco para:</p>

                    <div class="dup-days">
                      <% diasSemana.forEach(d => { %>
                        <label class="dup-day-option">
                          <input
                            type="checkbox"
                            value="<%= d.value %>"
                            <%= d.value === b.weekday ? 'disabled' : '' %> >
                          <span><%= d.short %></span>
                        </label>
                      <% }) %>
                    </div>

                    <div class="dup-actions">
                      <button type="button" class="btn-xs dup-cancel">
                        Cancelar
                      </button>

                      <form
                        action="/rotina/<%= b.id %>/duplicar-multiplos"
                        method="POST"
                        class="dup-form">
                        <input type="hidden" name="targetWeekdays" value="">
                        <button type="submit" class="btn-xs">
                          Duplicar
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              <% }) %>

            <% } %>

          </div>

          <!-- Bot√£o de adicionar bloco para o dia -->
          <a href="/rotina/novo?weekday=<%= dia.value %>" class="btn-secondary add-btn">
            + Bloco para <%= dia.short %>
          </a>

        </div>
      <% }) %>

    </div>
  </section>

  <script src="/js/theme.js"></script>
  <script src="/js/rotina.js"></script>
</body>
</html>
