<%- include("partials/header", { tituloPagina }) %>

<div class="container" style="padding: 40px; max-width: 900px;">

    <h1 style="margin-bottom:20px;">Meu Perfil</h1>

    <div style="display:flex; align-items:center; gap:20px; margin-bottom:30px;">
        <img src="<%= usuario.foto || '/img/default-usuario.png' %>" 
             alt="Foto do usuário" 
             style="width:120px; height:120px; border-radius:50%; object-fit:cover;">
        
        <div>
            <h2><%= usuario.nome %></h2>
            <p style="font-size:16px; color:#555;">
                <strong>Email:</strong> <%= usuario.email %>
            </p>
        </div>
    </div>

    <a href="/dias"
       style="
            padding:10px 20px;
            background:#1C9AFF;
            color:#fff;
            border-radius:10px;
            text-decoration:none;
            font-weight:600;
        ">
        Voltar ao Início
    </a>

</div>

<%- include("partials/footer") %>
