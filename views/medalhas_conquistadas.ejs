<%- include("partials/header", { tituloPagina }) %>

<div class="kst-container medalhas-page">

  <h1 class="titulo-pagina">üèÜ Medalhas Conquistadas</h1>

  <% if (conquistadas.length === 0) { %>
    <p class="nenhuma-medalha">
      Voc√™ ainda n√£o conquistou nenhuma medalha... mas vai conquistar muitas!
    </p>
  <% } %>

  <div class="medalhas-grid">
    <% conquistadas.forEach(registro => { %>

      <article class="medalha-card ativa">

        <div class="medalha-status medalha-status--ativa">
          <span>DESBLOQUEADA</span>
        </div>

        <div class="medalha-raridade badge-raridade badge-raridade-<%= registro.medalha.raridade || 'comum' %>">
          <% if (registro.medalha.raridade === "raro") { %>
            RARO
          <% } else if (registro.medalha.raridade === "epico") { %>
            √âPICO
          <% } else if (registro.medalha.raridade === "lendario") { %>
            LEND√ÅRIO
          <% } else { %>
            COMUM
          <% } %>
        </div>

        <div class="medalha-icon-wrapper">
          <span class="medalha-icon"><%= registro.medalha.icone %></span>
        </div>

        <h3 class="medalha-nome"><%= registro.medalha.nome %></h3>

        <p class="medalha-desc"><%= registro.medalha.descricao %></p>

        <span class="medalha-categoria">
          <%= registro.medalha.categoria %>
        </span>

        <div class="medalha-data">
          Conquistada em
          <strong><%= new Date(registro.data_conquista).toLocaleDateString("pt-BR") %></strong>
        </div>

      </article>

    <% }) %>
  </div>

</div>

<%- include("partials/footer") %>
